<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/copyright_margin"
        android:layout_marginBottom="@dimen/copyright_margin"
        android:paddingStart="@dimen/copyright_padding"
        android:paddingTop="@dimen/copyright_padding"
        android:paddingEnd="@dimen/copyright_padding"
        android:paddingBottom="@dimen/copyright_padding"
        android:text="@string/copyright_text"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sub_title_margin_top"
        android:fontFamily="serif"
        android:paddingStart="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:paddingEnd="@dimen/title_padding"
        android:paddingBottom="@dimen/title_padding"
        android:text="@string/Sub_title"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/title_margin_top"
        android:fontFamily="serif"
        android:paddingStart="@dimen/title_padding"
        android:paddingTop="@dimen/title_padding"
        android:paddingEnd="@dimen/title_padding"
        android:paddingBottom="@dimen/title_padding"
        android:text="@string/Title"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />


</RelativeLayout>